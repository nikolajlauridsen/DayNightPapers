<Page x:Class="DayNightPapers.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DayNightPapers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <DockPanel>
        <Label DockPanel.Dock="Top" Margin="10,0,0,-10">Day wallpaper</Label>
        <WrapPanel DockPanel.Dock="Top" Margin="10">
            <Label Name="DayPaperLocation">Please select a wallpaper</Label>
            <Button Name="DayPickerBtn" Click="DayPickerBtn_Click">Select wallpaper</Button>
        </WrapPanel>

        <Label DockPanel.Dock="Top" Margin="10,10,0,-10">Night wallpaper</Label>
        <WrapPanel DockPanel.Dock="Top" Margin="10">
            <Label Name="NightPaperLocation">Please select a wallpaper</Label>
            <Button Name="NightPickerBtn" Click="NightPickerBtn_Click" >Select wallpaper</Button>
        </WrapPanel>

    </DockPanel>
</Page>
